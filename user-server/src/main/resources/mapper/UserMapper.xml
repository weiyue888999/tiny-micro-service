<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="io.xiaomo.inventory.mapper.UserMapper">

    <select id="findById" resultType="io.xiaomo.inventory.entity.User">
        SELECT * FROM t_user where id = #{id}
    </select>

    <select id="getListCount" resultType="int" parameterType="io.xiaomo.inventory.ddo.UserPageQueryDO">
        select count(*) from t_user
        <where>
            <if test="username != null and username != ''">
                username = #{username}
            </if>
        </where>
    </select>

    <select id="getPageList" resultType="io.xiaomo.inventory.entity.User" parameterType="io.xiaomo.inventory.ddo.UserPageQueryDO">
        select * from t_user
        <where>
            <if test="username != null and username != ''">
                username = #{username}
            </if>
        </where>
        limit #{offset},#{pageSize}
    </select>

    <insert id="insert" parameterType="io.xiaomo.inventory.entity.User">
    </insert>

    <update id="update">

    </update>

    <delete id="delete">

    </delete>

</mapper>